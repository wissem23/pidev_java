<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="668.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="controller.CategorieController">
   <children>
      <TableView fx:id="tab_categorie" layoutX="15.0" layoutY="23.0" onMouseClicked="#addCategorieSelect" prefHeight="200.0" prefWidth="642.0" stylesheets="@style.css">
        <columns>
          <TableColumn fx:id="col_nom" prefWidth="114.0" text="nom" />
          <TableColumn fx:id="col_description" prefWidth="524.0" text="description" />
        </columns>
      </TableView>
      <HBox layoutX="50.0" layoutY="300.0" prefHeight="100.0" prefWidth="282.0">
         <children>
            <Label prefHeight="48.0" prefWidth="58.0" stylesheets="@style.css" text="Nom">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <TextField fx:id="txt_nom" prefHeight="56.0" prefWidth="213.0" promptText="entrer le nom categorie" styleClass="textfield" stylesheets="@style.css" />
         </children>
      </HBox>
      <HBox layoutX="50.0" layoutY="400.0" prefHeight="192.0" prefWidth="427.0">
         <children>
            <Label prefHeight="63.0" prefWidth="95.0" text="Description">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <TextArea fx:id="txt_description" prefHeight="192.0" prefWidth="319.0" promptText="entrer description" styleClass="textfield" stylesheets="@style.css" />
         </children>
      </HBox>
      <Button fx:id="btn_add" layoutX="496.0" layoutY="481.0" mnemonicParsing="false" onMouseClicked="#add" prefHeight="31.0" prefWidth="58.0" styleClass="add-btn" stylesheets="@style.css" text="Add" />
      <Button fx:id="btn_update" layoutX="582.0" layoutY="481.0" mnemonicParsing="false" onMouseClicked="#update" styleClass="update-btn" stylesheets="@style.css" text="Update" />
      <Button fx:id="btn_delete" layoutX="496.0" layoutY="528.0" mnemonicParsing="false" onMouseClicked="#delete" styleClass="delete-btn" stylesheets="@style.css" text="Delete" />
      <Button fx:id="btn_clear" layoutX="582.0" layoutY="528.0" mnemonicParsing="false" onMouseClicked="#clear" prefHeight="26.0" prefWidth="66.0" styleClass="clear-btn" stylesheets="@style.css" text="Clear" />
   </children>
</AnchorPane>
